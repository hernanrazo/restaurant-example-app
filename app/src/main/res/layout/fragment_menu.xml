                android:textSize="20dp" />

            <TextView
                android:id="@+id/desert7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:textColor="@color/colorLetters"
                android:text="Lemon cake"
                android:textSize="20dp" />

            <TextView
