                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sloppy joe" />

            <TextView
                android:id="@+id/side2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Side salad" />

            <TextView
                android:id="@+id/side3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chicken Fajitas" />

            <TextView
                android:id="@+id/side4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rice" />
            
        </LinearLayout>
    </ScrollView>
</FrameLayout>