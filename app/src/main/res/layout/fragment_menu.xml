            <TextView
                android:id="@+id/entree2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Caesar salad" />
            <TextView
                android:id="@+id/entree3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Basic salad" />

            <TextView
                android:id="@+id/entree4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Steak" />

            <TextView
                android:id="@+id/entree5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tacos de lengua" />

            <TextView
                android:id="@+id/entree6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spicy fish filet" />

            <TextView
                android:id="@+id/entree7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="That one thing nobody orders" />

            <TextView
                android:id="@+id/entree8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rotisoree chicken" />

            <TextView
                android:id="@+id/desertsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Desserts" />

            <TextView
                android:id="@+id/desert1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Flan" />

            <TextView
                android:id="@+id/desert2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pot brownies" />

            <TextView
                android:id="@+id/desert3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chocolate chip cookies" />

            <TextView
                android:id="@+id/desert4"
