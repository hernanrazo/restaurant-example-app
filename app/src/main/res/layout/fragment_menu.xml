                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="French Fries" />

            <TextView
                android:id="@+id/appetizer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Onion Rings" />

            <TextView
                android:id="@+id/appetizer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Small Salad" />

            <TextView
                android:id="@+id/appetizer4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chicken fingers" />

            <TextView
                android:id="@+id/EntreesTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Entrees" />

            <TextView
                android:id="@+id/entree1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
