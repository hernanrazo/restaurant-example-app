<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".orderFragment">

    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:text="Order Online"
        android:textColor="@color/colorLetters"
        android:textSize="@dimen/titleLetterSize"
        android:gravity="top|center"/>

    <Spinner
        android:id="@+id/appetizerSpinner"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="100dp"
        android:background="@color/colorAccent"
        android:popupBackground="@color/colorAccent" />

    <Spinner
        android:id="@+id/entreeSpinner"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="140dp"
        android:background="@color/colorAccent"
        android:popupBackground="@color/colorAccent" />

    <Spinner
        android:id="@+id/kidsMenuSpinner"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="180dp"
        android:background="@color/colorAccent"
        android:popupBackground="@color/colorAccent" />

    <Spinner
        android:id="@+id/sideDishSpinner"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="220dp"
        android:background="@color/colorAccent"
        android:popupBackground="@color/colorAccent" />

    <Spinner
        android:id="@+id/desertSpinner"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="260dp"
        android:background="@color/colorAccent"
        android:popupBackground="@color/colorAccent" />


    <Button
        android:id="@+id/orderButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:background="@color/colorAccent"
        android:text="Order Now" />
</FrameLayout>