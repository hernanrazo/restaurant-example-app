<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="hernanrazo.fakerestaurant.contactUsPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/Title"
            android:layout_width="71dp"
            android:layout_height="38dp"
            android:layout_below="@+id/drawer_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="58dp"
            android:text="Contact Us"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/background_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.042" />

        <EditText
            android:id="@+id/emailInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Title"
            android:textColor="@android:color/background_light"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="98dp"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/emailTag"
            android:layout_width="71dp"
            android:layout_height="38dp"
            android:layout_alignTop="@+id/emailInput"
            android:layout_marginEnd="38dp"
            android:layout_toStartOf="@+id/Title"
            android:text="Email"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/background_light" />

        <EditText
            android:id="@+id/phoneInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/emailInput"
            android:layout_below="@+id/emailInput"
            android:layout_marginTop="86dp"
            android:ems="10"
            android:inputType="phone" />

        <TextView
            android:id="@+id/phoneTag"
            android:layout_width="71dp"
            android:layout_height="38dp"
            android:layout_alignTop="@+id/phoneInput"
            android:layout_marginTop="12dp"
            android:layout_toStartOf="@+id/phoneInput"
            android:text="Phone number"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/background_light"/>

        <TextView
            android:id="@+id/caption"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/Title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:text="Enter your email and phone number in order to get in touch with us."
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/background_light"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/navList"
        android:layout_width="198dp"
        android:layout_height="661dp"
        android:layout_gravity="left|start"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="#0f8c2c" >
    </ListView>

</android.support.v4.widget.DrawerLayout>


